# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/nyayagpt.log

# Data Paths
DATA_DIR=data
CHROMA_DB_DIR=chroma_db

# Application Settings
APP_NAME=NyayaGPT
APP_VERSION=0.1.0
DEBUG=False
